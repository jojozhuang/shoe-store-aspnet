@model Johnny.ShoeStore.WebUI.Areas.Admin.Models.RolePermissionViewModel
@{
    ViewBag.Title = "Admin: Edit RolePermission";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="box-body">
    <!-- form start -->
    @using (Html.BeginForm("Permissions", "Role", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
    {
        <div class="">
            <div class="form-group">
                <label for="SelectedRoleId" class="col-sm-2 control-label">Role</label>
                <div class="col-sm-10">
                    @if (!String.IsNullOrEmpty(Model.SelectedRoleId))
                    {
                        @Html.DropDownList("SelectedRoleId", new SelectList(ViewBag.Roles, "Id", "Name", Model.SelectedRoleId), "Please select a role", new { @class = "form-control", disabled = "true" }) @* Won't be posted back *@
                        @Html.HiddenFor(x => x.SelectedRoleId) @* Will be posted back *@
                    }
                    else
                    {
                        @Html.DropDownList("SelectedRoleId", new SelectList(ViewBag.Roles, "Id", "Name", Model.SelectedRoleId), "Please select a role", new { @class = "form-control", })
                    }
                    @Html.ValidationMessage("SelectedRoleId")
                </div>
            </div>
            <div class="form-group">
                <label for="Permissions" class="col-sm-2 control-label">Permission</label>
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.Permissions)
                </div>
            </div>
        </div>
        <div class="box-footer">
            <button type="submit" class="btn btn-info">Save</button>
            <button type="button" class="btn btn-default" id="ButtonRemoveSelection">Remove Selection</button>
        </div>
    }
</div><!-- /.box-body -->