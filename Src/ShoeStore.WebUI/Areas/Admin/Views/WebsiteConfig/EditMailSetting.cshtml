@model Johnny.ShoeStore.Domain.Entities.MailSetting
@{
    ViewBag.Title = "Admin: Edit " + @Model.MailSettingId;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    @if (TempData["message"] != null)
    {
        <div class="box box-success box-solid">
            <div class="box-header with-border">
                <h3 class="box-title">@TempData["message"]</h3>
                <div class="box-tools pull-right">
                    <button class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                </div><!-- /.box-tools -->
            </div><!-- /.box-header -->
            <div class="box-body">
                @TempData["message"]
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    }
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Mail Settings
            <small>Management</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Admin Home</a></li>
            <li class="active">Mail Settings</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="box box-info">
            <div class="box-header with-border">
                <h3 class="box-title">@Html.ActionLink("List", "EditMailSetting", null, new { @class = "btn btn-default" })&nbsp;@Html.ActionLink("Add", "EditMailSetting", null, new { @class = "btn btn-default" })</h3>
            </div><!-- /.box-header -->
            <!-- Horizontal Form -->
            <div class="box-body">
                <!-- form start -->
                @using (Html.BeginForm("EditMailSetting", "WebsiteConfig", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
                {
                    <div class="">
                        @foreach (var property in ViewData.ModelMetadata.Properties)
                        { 
                            switch (property.PropertyName)
                            {
                                case "MailSettingId":
                                    @Html.Hidden(property.PropertyName)
                                    break;
                                case "Sequence":
                                    break;
                                default:
                                    <div class="form-group">
                                        <label for="input@(property.DisplayName ?? property.PropertyName)" class="col-sm-2 control-label">@(property.DisplayName ?? property.PropertyName)</label>
                                        <div class="col-sm-10">
                                            @Html.TextBox(property.PropertyName, null, new { @class = "form-control", @for = (property.DisplayName ?? property.PropertyName) })                                                   
                                            @Html.ValidationMessage(property.PropertyName)
                                        </div>
                                    </div>
                                    break;
                            }
                            
                        }                        
                    </div>
                    <div class="box-footer">
                        <button type="submit" class="btn btn-info">Save</button>
                    </div>
                }
            </div><!-- /.box-body -->
            <div class="box-footer">
                
            </div><!-- /.box-footer -->
        </div>
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->