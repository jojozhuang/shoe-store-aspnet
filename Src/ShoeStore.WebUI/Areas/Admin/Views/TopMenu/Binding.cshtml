@model Johnny.ShoeStore.WebUI.Areas.Admin.Models.TopMenuViewModel
@{
    ViewBag.Title = "Admin: Edit ";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="box-body">
    <!-- form start -->
    @using (Html.BeginForm("Binding", "TopMenu", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
    {
        <div class="">
            <div class="form-group">
                <label for="inputTopMenuId" class="col-sm-2 control-label">Top Menu</label>
                <div class="col-sm-10">
                    @if (Model.SelectedTopMenuId != 0)
                    {
                        @Html.DropDownList("SelectedTopMenuId", new SelectList(ViewBag.TopMenus, "TopMenuId", "TopMenuName", Model.SelectedTopMenuId), "Please Select a top menu", new { @class = "form-control", disabled = "true"})
                        @Html.HiddenFor(x => x.SelectedTopMenuId) @* Will be posted back *@
                    }
                    else
                    {
                        @Html.DropDownList("SelectedTopMenuId", new SelectList(ViewBag.TopMenus, "TopMenuId", "TopMenuName", Model.SelectedTopMenuId), "Please Select a top menu", new { @class = "form-control" })
                    }
                    @Html.ValidationMessage("SelectedTopMenuId")
                </div>
            </div>
            <div class="form-group">
                <label for="inputMenuCategories" class="col-sm-2 control-label">Menu Category</label>
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.MenuCategories)
                </div>
            </div>
        </div>
        <div class="box-footer">
            <button type="submit" class="btn btn-info">Save</button>
            <button type="button" class="btn btn-default" id="ButtonRemoveSelection">Remove Selection</button>
        </div>
    }
</div><!-- /.box-body -->